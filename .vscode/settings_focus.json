{
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true,
    "source.addMissingImports": true
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "files.exclude": {
    // 通常時はファイルを隠蔽する

    "**/node_modules": true,
    "**/.vercel": true,
    "**/.scaffdog": true,
    "**/.husky": true,
    "**/.eslintrc.json": true,
    "**/middleware.js": true,
    "**/vercel.json": true,
    "**/next-env.d.ts": true,
    "**/.github": true,
    "**/dist": true,
    "**/.node-version": true,
    "**/tsconfig.json": true,
    "**/package.json": true,
    "**/minista.config.ts": true,
    "**/.vscode": true,
    "src/assets/entries/uno.css": true,
    "**/bun.lockb": true,
    "**/next.config.js": true,
    "**/types": true,
    "**/shims.d.ts": true,
    "**/tsconfig.tsbuildinfo": true,
    "**/.next": true,
    "**/.gitignore": true,
    "**/lint-staged.config.js": true,
    "**/uno.config.ts": true
  },
  "cSpell.words": ["Attributify"]
}
